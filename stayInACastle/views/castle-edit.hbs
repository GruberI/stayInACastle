<div class="edit-main">
    <h2>Edit Castle</h2>
    <div class="edit-div">
        <form action="/castles/{{_id}}/edit" method="POST" id="form-container">
            <div class="item-edit-div">
                <label for="input-name">Castle Name</label>
                <input type="text" id="input-name" name="name" value="{{this.name}}" class="edit-input" />
            </div>

            <div class="item-edit-div">
                <label for="input-country">Country</label>
                <input type="text" id="input-country" name="country" value="{{this.country}}" class="edit-input" />
            </div>

            <div class="item-edit-div">
                <label for="input-address">Address</label>
                <input type="text" id="input-address" name="address" value="{{this.address}}" class="edit-input" />
            </div>

            <div class="item-edit-div">
                <label for="input-image">Image</label>
                <input type="text" id="input-image" name="image" value="{{this.image}}" class="edit-input" />
            </div>

            <div class="item-edit-div">
                <label for="input-capacity">Capacity</label>
                <input type="number" id="input-capacity" name="capacity" value="{{this.capacity}}" class="edit-input" />
            </div>

            <div class="item-edit-div">
                <label for="input-link">Link</label>
                <input type="text" id="input-link" name="link" value="{{this.link}}" class="edit-input" />
            </div>

            <div class="item-edit-div">
                <label for="input-description">Description</label>
                <input type="text" id="input-description" name="description" value="{{this.description}}"
                    class="edit-input" />
            </div>

            <div class="item-edit-div">
                <label for="input-pun">Review</label>
                <input type="text" id="input-pun" name="pun" value="{{this.pun}}" class="edit-input" />
            </div>

            <div class="item-edit-div">
                <label for="input-lat">Latitude</label>
                <input type="Schema.Types.Decimal128" id="input-lat" name="lat" value="{{this.lat}}"
                    class="edit-input" />
            </div>

            <div class="item-edit-div">
                <label for="input-lng">Longitude</label>
                <input type="Schema.Types.Decimal128" id="input-lng" name="lng" value="{{this.lng}}"
                    class="edit-input" />
            </div>


            <button type="submit" class="edit-btn">Update Castle</button>
    </div>
    </form>
</div>

