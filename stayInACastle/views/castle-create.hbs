<form action="/create" method="POST" id="form-container">
    <div>
        <label for="input-name">Castle Name</label>
        <input type="text" id="input-name" name="name" placeholder="Enter the name of the castle" />
    </div>

    <div>
        <label for="input-country">Country</label>
        <input type="text" id="input-country" name="country" placeholder="Enter the country" />
    </div>

    <div>
        <label for="input-address">Address</label>
        <input type="text" id="input-address" name="address" placeholder="Enter the address" />
    </div>

    <div>
        <label for="input-image">Image</label>
        <input type="text" id="input-image" name="image" placeholder="Provide an image" />
    </div>

    <div>
        <label for="input-capacity">Capacity</label>
        <input type="number" id="input-capacity" name="capacity" placeholder="Capacity" />
    </div>

    <div>
        <label for="input-link">Link</label>
        <input type="text" id="input-link" name="link" placeholder="Link" />
    </div>

    <div>
        <label for="input-description">Description</label>
        <input type="text" id="input-description" name="description" placeholder="Description" />
    </div>


    <div>
        <button>Add Castle</button>
    </div>

</form>